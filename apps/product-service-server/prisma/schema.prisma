datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  price     Float?
  name      String?
  shop      Shop?    @relation(fields: [shopId], references: [id])
  shopId    String?
}

model Shop {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String?
  typeField String?
  address   String?
  products  Product[]
}
